generator client {
  provider = "prisma-client"
  output   = "./generated"
}

datasource db {
  provider = "postgresql"
}

enum Roles {
  ADMIN
  USER
}

model User {
  id        String   @id @default(dbgenerated("gen_random_uuid()"))
  email     String   @unique
  authId    String   @unique
  role      Roles    @default(USER)
  createdAt DateTime @default(now()) @db.Timestamp(6)
}
